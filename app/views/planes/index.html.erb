<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<div class="card-header">
  <div class="card-tools">
    <%= search_form_for @q, class: "input-group input-group-sm plane-form" do |f| %>
      <%= f.text_field :code_or_id_or__cont, class: "form-control float-right", placeholder: t(".search") %> &nbsp;
      <%= f.button :submit, class: "btn btn-sm btn-primary input-group-append" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>
</div>
<table class="table table-hover" id="table-request">
  <% if current_user.admin? %>
    <div class="create-request">
      <%= link_to new_plane_path locale do %>
        <button type="button" class="btn float-right btn-primary my-hover" data-toggle="tooltip" data-placement="right" title=<%= t ".create_plane" %> ><i class="fa fa-plus"></i></button>
      <% end %>
    </div>
  <% end %>
  <thead>
    <tr>
      <th scope="col"><%= t ".order_id" %></th>
      <th scope="col"><%= t ".code" %></th>
      <th scope="col"><%= t ".status" %></th>
      <th scope="col"><%= t ".locaion" %></th>
      <th scope="col"><%= t ".request" %></th>
    </tr>
  </thead>
  <%= render @planes %>
</table>
<%= paginate @planes, theme: "twitter-bootstrap-4" %>
